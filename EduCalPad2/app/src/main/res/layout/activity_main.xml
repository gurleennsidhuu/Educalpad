<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#aedbff">

    <ImageView
        android:layout_width="263dp"
        android:layout_height="233dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/developers_ankit_kumar_yadav_gurleen_sidhu"/>

    <Button
        android:id="@+id/notepad"
        android:layout_width="40mm"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/notepadicon"
        android:text="Notepad"
        android:background="@drawable/curvedborder"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:padding="20dp"
        android:textSize="25dp"
        android:onClick="openNotepad"
        android:textAllCaps="false"
        android:textColor="#1f77b4"
        />
    <Button
        android:id="@+id/calculator"
        android:layout_width="40mm"
        android:layout_height="70dp"
        android:drawableLeft="@drawable/calculatoricon"
        android:text="Calculator"
        android:background="@drawable/curvedborder"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:padding="20dp"
        android:textSize="25dp"
        android:onClick="openCalculator"
        android:textAllCaps="false"
        android:textColor="#1f77b4"
        />
    <Button
        android:id="@+id/news"
        android:layout_width="40mm"
        android:layout_height="70dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/curvedborder"
        android:drawableLeft="@drawable/newsicon"
        android:onClick="openNews"
        android:text="News"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:padding="20dp"
        android:textColor="#1f77b4"/>

    <Button
        android:id="@+id/search"
        android:layout_width="40mm"
        android:layout_height="70dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/curvedborder"
        android:drawableLeft="@drawable/searchicon"
        android:onClick="openSearch"
        android:padding="20dp"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="#1f77b4"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/searchButton"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="#aedbff"
            android:onClick="openSearch"
            android:src="@drawable/ic_search" />

        <ImageButton
            android:id="@+id/calculatorButton"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="#aedbff"
            android:onClick="openCalculator"
            android:src="@drawable/ic_calculator" />

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@color/teal_700"
            android:src="@drawable/ic_home" />

        <ImageButton
            android:id="@+id/notepadButton"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="#aedbff"
            android:onClick="openNotepad"
            android:src="@drawable/ic_notepad" />

        <ImageButton
            android:id="@+id/newsIcon"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="#aedbff"
            android:onClick="openNews"
            android:src="@drawable/ic_baseline_tv_24" />

    </LinearLayout>

</LinearLayout>